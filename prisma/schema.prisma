generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRoles {
  SUPER_ADMIN
  USER
}

enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}

model UserAccount {
  id             String   @id @unique @default(uuid())
  createdAt      DateTime @default(now())
  createdBy      String?
  updatedBy      String?
  updatedAt      DateTime @updatedAt
  ownerAccountId String?

  name             String
  email            String            @unique
  password         String
  roles            UserRoles?        @default(USER)
  applications     Application[]
  userRequirements UserRequirement[]

  @@map("user_account")
}

model IdType {
  id             String   @id @unique @default(uuid())
  createdAt      DateTime @default(now())
  createdBy      String?
  updatedBy      String?
  updatedAt      DateTime @updatedAt
  ownerAccountId String?

  label        String
  code         String   @unique
  officialUrls String[]
  description  String?
  logoUrl      String?

  requirements IdTypeRequirement[]
  applications Application[]

  @@map("id_type")
}

model Requirement {
  id             String   @id @unique @default(uuid())
  createdAt      DateTime @default(now())
  createdBy      String?
  updatedBy      String?
  updatedAt      DateTime @updatedAt
  ownerAccountId String?

  label       String  @unique
  description String?

  idTypes          IdTypeRequirement[]
  userRequirements UserRequirement[]

  @@map("requirement")
}

model IdTypeRequirement {
  id             String   @id @unique @default(uuid())
  createdAt      DateTime @default(now())
  createdBy      String?
  updatedBy      String?
  updatedAt      DateTime @updatedAt
  ownerAccountId String?

  idTypeId      String
  requirementId String

  isRequired Boolean @default(true)

  idType      IdType      @relation(fields: [idTypeId], references: [id], onDelete: Cascade)
  requirement Requirement @relation(fields: [requirementId], references: [id], onDelete: Cascade)

  @@unique([idTypeId, requirementId])
  @@map("id_type_requirement")
}

model Application {
  id             String   @id @unique @default(uuid())
  createdAt      DateTime @default(now())
  createdBy      String?
  updatedBy      String?
  updatedAt      DateTime @updatedAt
  ownerAccountId String?

  userId   String
  idTypeId String
  status   ApplicationStatus @default(PENDING)
  isActive Boolean           @default(true)

  user   UserAccount @relation(fields: [userId], references: [id], onDelete: Cascade)
  idType IdType      @relation(fields: [idTypeId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([idTypeId])
  @@map("application")
}

model UserRequirement {
  id             String   @id @unique @default(uuid())
  createdAt      DateTime @default(now())
  createdBy      String?
  updatedBy      String?
  updatedAt      DateTime @updatedAt
  ownerAccountId String?

  userId        String
  requirementId String

  isCompleted Boolean   @default(false)
  fileUrl     String?
  verified    Boolean   @default(false)
  completedAt DateTime?
  expiresAt   DateTime?

  user               UserAccount         @relation(fields: [userId], references: [id], onDelete: Cascade)
  requirement        Requirement         @relation(fields: [requirementId], references: [id])
  requirementUploads RequirementUpload[]

  @@unique([userId, requirementId])
  @@index([userId])
  @@map("user_requirement")
}

model RequirementUpload {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  fileUrl  String
  fileName String
  fileType String

  userRequirementId String
  UserRequirement   UserRequirement @relation(fields: [userRequirementId], references: [id], onDelete: Cascade)

  @@map("requirement_upload")
}
