generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRoles {
  SUPER_ADMIN
  USER
}

model UserAccount {
  id             String   @id @unique @default(uuid())
  createdAt      DateTime @default(now())
  createdBy      String?
  updatedBy      String?
  updatedAt      DateTime @updatedAt
  ownerAccountId String?

  name              String
  email             String              @unique
  password          String
  roles             UserRoles?          @default(USER)
  UserRequirements  UserRequirement[]
  userGovernmentIds UserGovernmentIds[]

  @@map("user_account")
}

model GovernmentIds {
  id             String   @id @unique @default(uuid())
  createdAt      DateTime @default(now())
  createdBy      String?
  updatedBy      String?
  updatedAt      DateTime @updatedAt
  ownerAccountId String?

  description       String?
  code              String              @unique
  label             String
  officialUrls      String[]
  UserGovernmentIds UserGovernmentIds[]
  RequirementLists  RequirementList[]

  @@map("government_ids")
}

model UserGovernmentIds {
  id             String   @id @unique @default(uuid())
  createdAt      DateTime @default(now())
  createdBy      String?
  updatedBy      String?
  updatedAt      DateTime @updatedAt
  ownerAccountId String?

  isActive        Boolean       @default(true)
  GovernmentIds   GovernmentIds @relation(fields: [governmentIdsId], references: [id])
  governmentIdsId String
  UserAccount     UserAccount   @relation(fields: [userAccountId], references: [id])
  userAccountId   String
}

model Requirements {
  id             String   @id @unique @default(uuid())
  createdAt      DateTime @default(now())
  createdBy      String?
  updatedBy      String?
  updatedAt      DateTime @updatedAt
  ownerAccountId String?

  label                   String
  UserRequirements        UserRequirement[]
  RequireRequirementLists RequireRequirementList[]
  RequirementList         RequirementList?         @relation(fields: [requirementListId], references: [id])
  requirementListId       String?

  @@map("requirements")
}

model RequireRequirementList {
  id             String   @id @unique @default(uuid())
  createdAt      DateTime @default(now())
  createdBy      String?
  updatedBy      String?
  updatedAt      DateTime @updatedAt
  ownerAccountId String?

  Requirements      Requirements    @relation(fields: [requirementsId], references: [id])
  requirementsId    String
  RequirementList   RequirementList @relation(fields: [requirementListId], references: [id])
  requirementListId String

  @@map("require_requirement_list")
}

model RequirementList {
  id             String   @id @unique @default(uuid())
  createdAt      DateTime @default(now())
  createdBy      String?
  updatedBy      String?
  updatedAt      DateTime @updatedAt
  ownerAccountId String?

  RequireRequirementLists RequireRequirementList[]
  governmentId            String
  GovernmentIds           GovernmentIds            @relation(fields: [governmentId], references: [id])
  Requirements            Requirements[]

  @@map("requirement_list")
}

model UserRequirement {
  id             String   @id @unique @default(uuid())
  createdAt      DateTime @default(now())
  createdBy      String?
  updatedBy      String?
  updatedAt      DateTime @updatedAt
  ownerAccountId String?

  isActive       Boolean
  requirementsId String?
  Requirement    Requirements? @relation(fields: [requirementsId], references: [id])
  userAccountId  String
  UserAccount    UserAccount   @relation(fields: [userAccountId], references: [id])

  @@map("user_requirement")
}
